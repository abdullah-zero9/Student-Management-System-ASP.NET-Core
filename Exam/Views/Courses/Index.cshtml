@model IEnumerable<Exam.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<div style="width: 30%; float: left;">
    <table class="table table-sm">
        <thead>
            <tr>
                <th>
                    Course Title
                </th>
                <th>
                    <p class="d-flex justify-content-end">
                        <a asp-action="Create" class="btn btn-outline-primary btn-sm" asp-controller="Courses"><i class="fa fa-plus"></i> Add New Course</a>
                    </p>
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(xItem => item.CourseName)
                    </td>
                    <td style="text-align: right;">
                        <a asp-action="Edit" asp-route-id="@item.CourseId" class="btn btn-outline-success btn-sm"><i class="fa fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Courses" class="btn btn-outline-danger btn-sm" asp-route-id="@item.CourseId" onclick="return confirm('Are you sure you want to delete this record?');">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
